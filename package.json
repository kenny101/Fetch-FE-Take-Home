		"svelte-check": "^3.6.2",
		"svelte-confetti": "^1.3.1",
		"sveltekit-superforms": "^1.11.0",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"tsx": "^4.6.0",
		"typescript": "^5.3.2",
		"vite": "^4.5.0",
		"vitest": "^0.32.4",
		"zod": "^3.22.4"
	},
